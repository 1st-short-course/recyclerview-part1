<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/imvArticle"
            android:layout_width="100dp"
            android:layout_height="115dp" />
        <TextView
            android:id="@+id/tvArtTitle"
            android:text="Title"
            android:textSize="30sp"
            android:layout_toRightOf="@id/imvArticle"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvArtDes"
            android:text="Description"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imvArticle"
            android:layout_below="@id/tvArtTitle"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/eye"
            android:layout_below="@id/tvArtDes"
            android:layout_toRightOf="@id/imvArticle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_remove_red_eye_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="View"
            android:id="@+id/tvArtView"
            android:layout_toRightOf="@id/eye"
            android:layout_below="@id/tvArtDes"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/icDetail"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvArtDes"
            android:layout_marginTop="15dp"
            android:src="@drawable/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/icDelete"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>